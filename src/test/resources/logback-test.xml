<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="ApplicationLog" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS zZ} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="ApplicationLog"/>
    </root>
</configuration>